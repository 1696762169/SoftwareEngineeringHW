/* pages/confirm/confirm.wxss */
.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  position:absolute;
  top: 0px;
  bottom: 130px;
  left: 0px;
  right: 0px;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  background-color: white;
	position:absolute;
  height: 100px;
  bottom: 70px;
  left: 0px;
	right: 0px;
}
.route_box route{
  display: flex;
	flex-direction: column;
	font-size: 20px;
	justify-content: flex-start;
}
.distance_box{
  display: flex;
	flex-direction: row;
}
.distance{
  color: #0091ff;
  font-weight: 700;
}
.time_box{
  display: flex;
	flex-direction: row;
}
.time{
  color: #0091ff; 
  font-weight: 700;
}
.info_box{
  font-size: 15px;
  display: flex;
	flex-direction: column;
}

.car_box{
	font-size: 15px;

  display: flex;
	flex-direction: column;
	justify-content: flex-end;
}
.car_ID{
  display: flex;
	flex-direction: row;
}
.carID{
  font-size: 20px;
  font-weight: 900;
}
.car_Type{
  display: flex;
	flex-direction: row;
}
.carType{
  font-size: 20px;
  font-weight: 900;
}
.confirm_box{
  position:absolute;
  height: 50px;
  bottom: 0px;
  left: 0px;
  right: 0px;
}
.cancel_button{
  position:absolute;
  bottom: 10px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #0091ff;
  width:100px;
  text-align:center;
  border-radius:5px;
}
.unable_button{
  position:absolute;
  bottom: 10px;
  right: 10px;
  padding: 3px 5px;
  color: #fff;
  background: #676868;
  width:100px;
  text-align:center;
  border-radius:5px;
}