/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.left-right-container {
  display: flex;
  justify-content: space-between; /* 将两个内部 view 放在容器的两端 */
  align-items: center; /* 垂直居中 */
  width: 100%;
  background-color: #f5f5f5;
}

.left-align {
  text-align: left;
}

.right-align {
  text-align: right;
}